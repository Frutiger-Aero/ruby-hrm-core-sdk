{
  "name": "hrm-core-svc",
  "version": "0.0.1",
  "description": "HRM-core Qlean",
  "author": "Stets Dmitriy <d.stets@qlean.ru>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "build": "npm run proto && rm -rf dist && tsc && cp -R ./proto ./dist",
    "proto": "node bin/generate.js",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node -r dotenv/config dist/main.js\"",
    "start:prod": "node -r dotenv/config dist/main.js",
    "start:hmr": "node dist/server",
    "start": "npm run typeorm migration:run && npm run start:prod",
    "test:cov": "jest --coverage",
    "test": "jest --verbose --runInBand --setupFiles dotenv/config --config ./test/jest.json",
    "test:e2e": "TYPEORM_DATABASE=hrm_core_test LOGGER_LEVEL=security jest --verbose --setupFiles dotenv/config --runInBand --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "entrypoint": "npm run typeorm migration:run && npm run fixtures:insert && npm run start:prod",
    "publish:sdk": "npm publish sdk/nestjs",
    "build:sdk": "npm run proto && cp -r ./src/core/interfaces ./sdk/nestjs/src && cd sdk/nestjs && npm run build",
    "bump:sdk": "cd sdk/nestjs && npm version patch",
    "db:eml": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm-uml -d=eml.png",
    "documentation": "npx compodoc -p tsconfig.json -s",
    "typeorm:migrate": "npm run typeorm migration:run",
    "fixtures:insert": "cp -R ./data ./dist && node dist/utils/fixture-inserter.js"
  },
  "dependencies": {
    "@nestjs/common": "6.6.7",
    "@nestjs/core": "6.6.7",
    "@nestjs/microservices": "6.6.7",
    "@nestjs/platform-express": "^6.10.5",
    "@nestjs/typeorm": "^6.2.0",
    "@qlean/crm-booking-sdk": "^0.1.0",
    "@qlean/nestjs-exceptions": "^0.2.2",
    "@qlean/nestjs-logger": "^0.2.3",
    "@qlean/nestjs-sentry": "^0.1.2",
    "@qlean/nestjs-stats": "0.9.1",
    "@qlean/nestjs-typeorm-persistence-search": "^1.2.1",
    "@qlean/sso-utils-sdk": "^0.1.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cookie": "^0.3.1",
    "csvtojson": "^2.0.8",
    "cuid": "^2.1.4",
    "dotenv": "^6.0.0",
    "faker": "^4.1.0",
    "geolib": "^3.3.1",
    "graphql": "^14.5.8",
    "grpc": "1.22.2",
    "jest": "^21.2.1",
    "jsforce": "^1.9.3",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "stjs": "0.0.5",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.24",
    "typeorm-uml": "^1.1.2",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/testing": "6.1.1",
    "@qlean/genproto": "^0.7.3",
    "@qlean/service-bus-sdk": "^0.5.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.10",
    "@types/node": "12.12.6",
    "@types/supertest": "^2.0.4",
    "base64url": "^3.0.1",
    "glob": "^7.1.6",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "protobufjs": "^6.8.9",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-json-schema-generator": "^0.68.0",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "typescript-json-schema": "^0.41.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
