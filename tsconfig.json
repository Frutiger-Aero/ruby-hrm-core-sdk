{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "sdk",
    "dist",
    "test",
    "utils",
    "migrations"
  ],
  "include": ["src/**/*"]
}